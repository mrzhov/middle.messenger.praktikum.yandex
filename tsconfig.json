{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types", "src/shared/types/app.d.ts"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
